[user]
  name = Brian Toth
  email = btoth@palantir.com
[core]
  autocrlf = false
  safecrlf = true
  editor = vim
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
[color]
  status = auto
  branch = auto
  ui = auto
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
	conflictstyle = diff3
[mergetool "mymeld"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE"
[push]
	default = simple
[rerere]
	enabled = 1
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
